<div class="banner">
  <div class="banner-content">
<!--     <h2>Sign up</h2>
 -->
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

        <div class="goal-set">
          I want to visit <%= f.input :number_countries, input_html: {value: params[:countries]}, label: false %> countries in
          <%= f.input :years, input_html: {value: params[:years]}, label: false %> years.
        </div>
          <%= f.input :email, required: true, autofocus: true, placeholder: "placeholder text" %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
          <%= f.button :submit, "Sign up" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
