<div class="map-page">
  <div id="map" style="width: 100%; height: 600px;"></div>
  <div class="map-container">
    <h3 class="text-center">Legend</h3>
    <p class="map-item">Countries I've Been To</p>
    <p class="map-item">Countries I Want to Visit</p>
    <p class="map-item">Top Priority</p>
  </div>
  <% content_for(:after_js) do %>
    <script>
      markers_json = <%=raw @hash.to_json %>;
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
       markers = handler.addMarkers(markers_json);
       handler.bounds.extendWith(markers);
       for (var i = 0; i < markers.length; i++) {
          google.maps.event.addListener(markers[i].serviceObject, 'click', function(event) {
            window.open(this.title);
          });
       }
       handler.fitMapToBounds();
      });
    </script>
  <% end %>
</div>
